<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="79dp" />

    <TextView
        android:id="@+id/p1_name_sc"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:fontFamily="sans-serif-condensed-"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/p2_name_sc"
        app:layout_constraintEnd_toStartOf="@+id/p1_score_sc"
        app:layout_constraintStart_toStartOf="@id/guideline6"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/p3_name_sc"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:fontFamily="sans-serif-condensed-"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/p4_name_sc"
        app:layout_constraintEnd_toStartOf="@+id/p3_score_sc"
        app:layout_constraintStart_toEndOf="@id/guideline13"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/p2_name_sc"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:fontFamily="sans-serif-condensed-"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/p2_score_sc"
        app:layout_constraintStart_toStartOf="@id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/p1_name_sc"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/p4_name_sc"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:fontFamily="sans-serif-condensed-"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/p4_score_sc"
        app:layout_constraintStart_toEndOf="@id/guideline13"
        app:layout_constraintTop_toBottomOf="@+id/p3_name_sc"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/p1_score_sc"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:fontFamily="sans-serif-condensed-"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/p2_score_sc"
        app:layout_constraintEnd_toStartOf="@id/guideline11"
        app:layout_constraintStart_toEndOf="@+id/p1_name_sc"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/p2_score_sc"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:fontFamily="sans-serif-condensed-"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toStartOf="@id/guideline11"
        app:layout_constraintStart_toEndOf="@+id/p2_name_sc"
        app:layout_constraintTop_toBottomOf="@+id/p1_score_sc"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/p3_score_sc"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:fontFamily="sans-serif-condensed-"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/p4_score_sc"
        app:layout_constraintEnd_toEndOf="@id/guideline12"
        app:layout_constraintStart_toEndOf="@+id/p3_name_sc"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/p4_score_sc"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:fontFamily="sans-serif-condensed-"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="@id/guideline12"
        app:layout_constraintStart_toEndOf="@+id/p4_name_sc"
        app:layout_constraintTop_toBottomOf="@+id/p3_score_sc"
        tools:visibility="invisible" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.47" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.53" />


</androidx.constraintlayout.widget.ConstraintLayout>